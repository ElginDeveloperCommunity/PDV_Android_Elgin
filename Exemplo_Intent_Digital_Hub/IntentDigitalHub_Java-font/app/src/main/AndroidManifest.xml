<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.elgin.intent_digital_hub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.E1DigitalHub_AppExperience"
        tools:targetApi="31"
        tools:replace="android:theme"
        >
        <activity
            android:name="com.elgin.intent_digital_hub.SAT.SATActivity"
            android:exported="false" />
        <activity
            android:name="com.elgin.intent_digital_hub.Bridge.BridgeActivity"
            android:exported="false" />
        <activity
            android:name="com.elgin.intent_digital_hub.Printer.PrinterActivity"
            android:exported="false" />
        <activity
            android:name="com.elgin.intent_digital_hub.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>